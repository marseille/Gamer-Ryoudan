<br /><br />
<h3> Search results: </h3>
<% @game_results.each do |game| %>
  <% @game = game %>
  <% added = false %>  
  <% added =  !([game] & current_user.games).empty? if current_user%>      
  <%= render :partial => "games/game", :locals => {:added => added}%>
  <% @no_spaces = @game.name.gsub(/ /,'_') %>
  <div id=<%="'add_"+@no_spaces+"_div'"%> class="add_game_partial">
    <% if !added %>    
        <%= render :partial => "shared/add_to_list", :locals => {:only_submit => true} %>            
    <% else %> 
      <%= render :partial => "shared/add_to_list", :locals => {:only_submit => true} %>
    <% end %>        
  </div>  
  <br />
<% end %>
<br />
<div class=clear>
<%= "More results" %>
<%= will_paginate @game_results, 
                             :search_tag => @search_tag, 
                             :home_search=> @home_search,
                             :seperator => " ", 
                             :renderer => @renderer %>
</div>