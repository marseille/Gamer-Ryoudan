<%= javascript_include_tag "games.js" %>
<% name = game[0]["name"] %>
<tr>
  <td> <%= name %> </td>
  <td> <%= label_tag(:platform, game[0]["platform"], :class => "left_align") %> </td>      
  <td> 
    <div name=<%= name%> id=<%= name+"_difficulty_div" %>>
      <%= link_to game[1]["difficulty"], {}, {:selector_id => name + "_difficulty", :class => "set_difficulty left_align"} %>       
    </div>
  </td>
  <td> 
    <div name=<%=name%> id=<%= name + "_level_div" %>>
      <% str = game[1]["current_level"].to_s %> 
      <%= link_to  str, {}, {:selector_id => name +"_level", :class => "set_current_level level_align"} %>     
      <%= label_tag :slash, " / ", :class => "level_align" %>
      <%= label_tag :max_level, game[0]["levels"].to_s, :id => name + "_max_level", :class => "left_align" %>
    </div>
  </td>
  <td>
    <div name=<%=name%> id=<%= name + "_hours_played_div" %>>
      <%= link_to game[1]["hours_played"], {}, {:selector_id => name + "_hours_played", :class => "set_hours_played l"} %></td>
    </div>
  <td><%= link_to "(x)", :controller => "users", :action => "remove_game_from_list", :name => name %></td>
</tr>